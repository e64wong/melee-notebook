<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/game_counter_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Game 1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/player_character_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_counter_bar"
        android:entries="@array/melee_characters" />

    <Spinner
        android:id="@+id/opponent_character_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/game_counter_bar"
        android:entries="@array/melee_characters" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_counter_bar"
        android:layout_centerHorizontal="true"
        android:text="@string/vs"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    </RelativeLayout>

    <TextView android:id="@+id/strike_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Previous Strike"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <RadioGroup android:id="@+id/strike_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/bf" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/ys" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/fod" />
    </RadioGroup>
    <RadioGroup android:id="@+id/strike_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/dl" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/fd" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/ps" />
    </RadioGroup>

    <TextView android:id="@+id/stage_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Stage"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <RadioGroup android:id="@+id/stage_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/bf" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/ys" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/fod" />
    </RadioGroup>
    <RadioGroup android:id="@+id/stage_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/dl" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/fd" />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:layout_margin="5dp"
            android:button="@drawable/ps" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I Won" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I Lost"/>
    </LinearLayout>


</LinearLayout>