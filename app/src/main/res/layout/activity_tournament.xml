<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tournament"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="me.ericwong.meleetournamentnotebook.TournamentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tournament_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.ActionBarTheme"
        app:popupTheme="@style/AppTheme.ActionBarPopupTheme"/>

    <TextView android:id="@+id/set_game_display"
        android:layout_below="@id/tournament_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:elevation="2dp"
        android:text="You vs SuperAnimeVapeGod"/>

    <FrameLayout android:id="@+id/list_fragment_container"
        android:layout_margin="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/set_game_display">
    </FrameLayout>

</RelativeLayout>
