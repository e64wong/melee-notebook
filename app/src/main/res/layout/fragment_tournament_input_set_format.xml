<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingStart="5dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/set_format_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="18sp"

        android:textColor="@android:color/black"
        android:text="@string/set_format" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/spinner"
        android:entries="@array/set_formats"
        android:gravity="center"
        android:layout_toEndOf="@+id/set_format_text"
        android:layout_toStartOf="@+id/set_format_submit" />

    <Button
        android:id="@+id/set_format_submit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/set"
        android:layout_alignParentEnd="true" />
</RelativeLayout>